@model Gm.UI.Models.Utilisateurs.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Page <small>d'authentification</small></h2>

@using (Html.BeginForm())
{
    @*@Html.AntiForgeryToken()*@
    
    <div class="form-inline">
        
        <hr />
        <p class="alert alert-info">
            Veuillez vous introduire votre Email ou  Identifiant .
        </p>
        <hr/>
        @if (ViewData["info"] != null)
        {
            <p class="alert alert-warning">
                @ViewData["info"]
            </p>
        }
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div >
            @Html.LabelFor(model => model.Identifiant, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Identifiant, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Identifiant, "", new { @class = "text-danger" })
            </div>
        </div>

        <div >
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div >
            @Html.LabelFor(model => model.RememberMe, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                <div >
                    @Html.EditorFor(model => model.RememberMe)
                    @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br/>
        <br />
        <hr />
        <div >
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="S'authentifier" class="btn btn-primary" />
                <a href="@Url.Action("Inscription","Account", new {area =""})">Vous n'avez pas encore un compte ? cliquer ici</a>
            </div>
        </div>
    </div>
}
<br/>