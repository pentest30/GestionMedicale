@model GM.Core.Models.Commande
@if (Request.RawUrl.Contains("Update"))
{
    using (Html.BeginForm("Update", "Commande", FormMethod.Post, new { id = "commande-form" }))
    {
        @Html.AntiForgeryToken()

        Html.RenderPartial("_BodyForm", Model);
    }
}
else
{
    using (Html.BeginForm("Create", "Commande", FormMethod.Post, new { id = "commande-form" }))
    {
        @Html.AntiForgeryToken()

        Html.RenderPartial("_BodyForm", Model);
    }
}




<script type="text/javascript">
    $(function() {
        $("#FournisseurId").select2();
        $('#Date').datepicker({
            format: 'dd/mm/yyyy'
        });
        $("#save-btn").click(function () {
            $("#continuer").val(true);
            $('#commande-form').submit();
        });
    })

</script>
