
@{
    
    ViewBag.Title = "Gestion de la pharmacie";
    Layout = "~/Areas/Gestion/Views/Shared/_Root.cshtml";
}

<div style="margin: 10px;">
    <div   class=" navbar navbar-inverses " style="padding: 0">
        @{
            if (User.IsInRole("pharmacien"))
            {
                Html.RenderPartial("_PharmacieMenu");
            }
            if (User.IsInRole("distributeur"))
            {
                Html.RenderPartial("_MenuDistributeur");
            }
           
        }
    </div>
    <div>
        @if (IsSectionDefined("sidebar"))
        {
            <div class="row" style="margin-top: 50px">
                <div class="span3">
                    <div class="well" style="padding: 8px 0;">
                        @RenderSection("sidebar")
                    </div>
                </div>
            </div>
        }
        
        <div style="border-left: 1px solid #ccc; background-color: white">@RenderBody()</div>
    </div>
</div>


